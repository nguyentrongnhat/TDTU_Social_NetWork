<div class="container" style="margin-top: 20px;">
    <div class="row">
        <div class="col" style="display: flex; justify-content: center;">
            <div class="card" style="width: 100%; height: 100%;">
                <div class="card-header">
                    <h5 class="card-title">Quản lý thông báo</h5>
                </div>
                <div class="card-body">
                    
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">Tiêu đề thông báo</th>
                                <th scope="col">Chủ đề</th>
                                <th scope="col">Ngày tạo</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(locals.list_notify) { %>
                                <% for(let notify of list_notify) { %>
                                    <tr>
                                        <td>
                                            <%= notify.title %>
                                        </td>
                                        <td>
                                            <%= notify.topic %>
                                        </td>
                                        <td>
                                            <%= notify.createdAt.toString().slice(4,15) %>
                                        </td>
                                        <td>
                                            <a href="/notify/manager/<%= department %>/delete/<%= notify.id %>" class="btn btn-red"><i class="fa fa-trash"></i></a>
                                            <a href="/notify/detail/<%= notify._id %>" class="btn btn-green"><i class="fa fa-eye"></i></a>
                                            <a href="/notify/manager/<%= department %>/edit/<%= notify._id %>" class="btn btn-orange"><i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
    
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>